// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int    @id @default(autoincrement())
  email      String @unique
  givenName  String
  familyName String
  picture    String
}

model Video {
  id           String   @id
  platform     String
  title        String
  description  String
  thumbnailUrl String
  rating       Float?
  publishedAt  DateTime
}

model Rating {
  id      Int    @id @default(autoincrement())
  videoId String
  userId  Int
  rating  Float

  @@unique([videoId, userId])
}
